@{
}

@model IEnumerable<User>

    <form method="get" asp-controller="Account" asp-action="ShowList">
        <h3>All Users list : </h3>
        @{ if (Model.Count() == 0)
            {
                <p>List is empty. Please, <a asp-controller="Account" asp-action="Register">Register</a> user first.</p>
            }
            else
            {
                @foreach (var user in Model)
                {
                    <p> @user.UserName -- @user.Code -- @user.Email -- @user.Id
                    <a asp-controller="Account" asp-action="Edit" asp-route-id="@user.Id">Edit </a><a asp-controller="Account" asp-action="Delete" asp-route-userId="@user.Id"> Delete</a>
                    </p>
                }
            }
            <p>Total : @Model.Count()</p>
        }
    </form>